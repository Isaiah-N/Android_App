<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="7sp"
            android:gravity="center_horizontal"
            android:text="查找记录"
            android:textColor="#82B1FF"
            android:textSize="30sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#8C9EFF" />

        <RadioGroup
            android:id="@+id/rdg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rdb0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:checked="true"
                android:text="显示全部记录"
                android:textColor="#ff6600"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rdb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="按采集人查找"
                android:textColor="#ff6600"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rdb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="按大豆生长期查询"
                android:textColor="#ff6600"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rdb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="按大豆的株高查询"
                android:textColor="#ff6600"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rdb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="按采集日期查询"
                android:textColor="#ff6600"
                android:textSize="20sp" />

        </RadioGroup>

        <EditText
            android:id="@+id/et1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:enabled="false"
            android:hint="请输入筛选条件"
            android:inputType="text"
            android:singleLine="true" />

        <TextView
            android:id="@+id/uu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="当前所有用户"
            android:textColor="@color/simpleBlack"
            android:textSize="15sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/querymethod"
            android:textColor="@color/littleBlack"
            android:textSize="16sp" />
        <Button
            android:id="@+id/query"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_btn"
            android:gravity="center"
            android:text="查询"
            android:textColor="#EDF5F4FF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/out"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_btn"
            android:enabled="true"
            android:gravity="center"
            android:text="导出全部采集数据"
            android:textColor="#EDF5F4FF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/bg_btnred"
            android:gravity="center"
            android:text="返回"
            android:textColor="#EDF5F4FF"
            android:textSize="20sp" />

    </LinearLayout>
</ScrollView>